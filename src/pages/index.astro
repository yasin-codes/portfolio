---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Yasin's Portfolio">

	<nav id="navbar" class="fixed top-0 w-full transition-transform duration-300 transform z-10 text-sm">
		<div class="text-black dark:text-white flex justify-between p-7 px-10 bg-white/50 dark:bg-zinc-950/50 backdrop-blur-md m-7 rounded-2xl">
			<div id="leftNav" class="flex items-center">
				<a href="" class="hover:text-gray-500 duration-300">
					Ahmad Yasin
				</a>
			</div>
			<div id="rightNav" class="flex gap-10 items-center">
				<ul class="flex gap-10 ">
					<li>
						<a href="" class="hover:text-gray-500 duration-300">
							Projects
						</a>
					</li>
					<li>
						<a href="" class="hover:text-gray-500 duration-300">
							Contact
						</a>
					</li>
				</ul>
				<div class="w-px h-full bg-black dark:bg-white"></div>
				<a id="darkModeToggle" class="hover:text-gray-500 duration-300 font-semibold rounded-full cursor-pointer scale-95">
					<svg id="sun" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 block">
						<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
					  </svg>
					  
					  <svg id="moon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 hidden">
						<path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
					  </svg>
				</a>	
			</div>
		</div>
	</nav>
	
	<div class="container">
		<div class="flex flex-row">
			
			<h1></h1>
			<p></p>
			<div class="flex"></div>
		</div>
	</div>

		
</Layout>

<script>
	let lastScrollTop = 0;
const navbar = document.getElementById('navbar');
const delta = 5; // Adjust as needed

window.addEventListener('scroll', function() {
  let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

  if (Math.abs(lastScrollTop - scrollTop) <= delta)
    return;

  if (scrollTop > lastScrollTop && scrollTop > navbar.offsetHeight) {
    // Scroll down
    navbar.classList.add('-translate-y-full');
  } else {
    // Scroll up or at the top
    navbar.classList.remove('-translate-y-full');
  }

  lastScrollTop = scrollTop;
});

</script>





